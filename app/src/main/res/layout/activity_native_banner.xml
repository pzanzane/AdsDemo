<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoAdActivity"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AdsDemo.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.AdsDemo.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>


    <Button
        android:id="@+id/btnNativeBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Native Banner"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/btnNativeBillboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Native Billboard"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/btnDynamicBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dynamic Banner"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/btnDynamicBillboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dynamic Billboard"
        android:layout_gravity="center_horizontal"
        />

    <RelativeLayout
        android:id="@+id/adview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:layout_gravity="center"
          />

</LinearLayout>